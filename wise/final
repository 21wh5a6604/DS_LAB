def is_disarium(n: int)->bool:
    n1=str(n)
    i=0
    a=[]
    while(i< len(str(n))):
        p=int(n1[i])*i
        return p
        i+=1
    a=a.append(p)
    return sum(a)==n
------------------------------------
def reverse_sentence(str1: str)->str:
    words=str1.split(" ")
    words=words[::-1]
    return(" ".join(words))
